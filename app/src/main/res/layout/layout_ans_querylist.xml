<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parentLayout"
            >

            <RelativeLayout
                android:id="@+id/question_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_toEndOf="@+id/imageView5"
                    android:padding="3dp"
                    android:text="heloo testing"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/query_textcolor"
                    />

                <TextView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_margin="3dp"
                    android:textStyle="bold"
                    android:textColor="@color/query_order_id_color"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text = "Q: "/>
                <!--<TextView-->
                    <!--android:id="@+id/time"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_below="@+id/question"-->
                    <!--android:layout_margin="2dp"-->
                    <!--android:text="4.25 pm"-->
                    <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
                    <!--android:textColor="@color/query_datecolor" />-->

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
                    <!--android:text="Small Text"-->
                    <!--android:textColor="@color/query_order_id_color"-->
                    <!--android:id="@+id/textViewOrderId"-->
                    <!--android:layout_below="@+id/question"-->
                    <!--android:layout_marginLeft="30dp" />-->
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl2"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question_rl"
                android:layout_marginLeft="30dp">

                <ImageView
                    android:id="@+id/imageViewTimer"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/time_icon" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/imageViewTimer"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="date"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/query_datecolor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/query_order_id_color"
                    android:text="Small Text"
                    android:id="@+id/textViewOrderId"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp" />

            </RelativeLayout>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_below="@+id/rl2"
                android:layout_marginTop="2dp"
                android:background="@color/gray_1"></View>

            <TextView
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:padding="3dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:text="Ans: "
                android:textColor="#36b458"
                 />

            <TextView
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/view2"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="1"
                android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will uncover many web sites still in their infancy. Various versions have evolved over the years, sometimes by accident, sometimes on purpose (injected humour and the like)."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/textColor"
                android:layout_below="@+id/view" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>
