            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardian's Name"
                android:layout_marginTop="@dimen/profile_fields_header_margin"
                android:textColor="@color/lightBlack"/>
            <TextView
                android:id="@+id/guardian_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_fields_height"
                android:paddingStart="@dimen/profile_fields_padding"
                android:paddingEnd="@dimen/profile_fields_padding"
