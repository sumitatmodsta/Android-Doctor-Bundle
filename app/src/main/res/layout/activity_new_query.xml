<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Order Id:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#26C6DA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/query_textcolor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="heloo iam testing the query"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="12-3-2013"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/query_datecolor" />

        <TableLayout
            android:id="@+id/tab1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_border">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:paddingBottom="@dimen/table_row_padding"
                android:paddingTop="@dimen/table_row_padding"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="Patient Name:"
                    android:textColor="#000000"
                    android:textSize="@dimen/table_row_textsize" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" />
            </TableRow>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.3"
                android:background="@color/gray_1" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:paddingBottom="@dimen/table_row_padding"
                android:paddingTop="@dimen/table_row_padding"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="Weight:"
                    android:textColor="#000000"
                    android:textSize="@dimen/table_row_textsize" />

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" />
            </TableRow>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.3"
                android:background="@color/gray_1" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:paddingBottom="@dimen/table_row_padding"
                android:paddingTop="@dimen/table_row_padding"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="Height:"
                    android:textColor="#000000"
                    android:textSize="@dimen/table_row_textsize" />

                <TextView
                    android:id="@+id/height"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" />
            </TableRow>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.3"
                android:background="@color/gray_1" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:paddingBottom="@dimen/table_row_padding"
                android:paddingTop="@dimen/table_row_padding"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"

                    android:text="Diagnosis:"
                    android:textColor="#000000"
                    android:textSize="@dimen/table_row_textsize" />

                <TextView
                    android:id="@+id/diagnosis"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" />
            </TableRow>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.3"
                android:background="@color/gray_1" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:paddingBottom="@dimen/table_row_padding"
                android:paddingTop="@dimen/table_row_padding"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="Previous Medication:"
                    android:textColor="#000000"
                    android:textSize="@dimen/table_row_textsize" />

                <TextView
                    android:id="@+id/medication"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" />
            </TableRow>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.3"
                android:background="@color/gray_1" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:paddingBottom="@dimen/table_row_padding"
                android:paddingTop="@dimen/table_row_padding"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text="Allergy:"
                    android:textColor="#000000"
                    android:textSize="@dimen/table_row_textsize" />

                <TextView
                    android:id="@+id/allergy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" />
            </TableRow>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.3"
                android:background="@color/gray_1" />
            <TableRow
                android:id="@+id/reportRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:paddingBottom="@dimen/table_row_padding"
                android:paddingTop="@dimen/table_row_padding"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Reports Attached:"
                    android:textColor="#000000"
                    android:textSize="@dimen/table_row_textsize" />

                <TextView
                    android:id="@+id/reportsAttached"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/attached_report_text_color"
                    android:clickable="true"
                    android:text="sampleTest"
                    android:layout_weight="1" />
            </TableRow>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.3"
                android:background="@color/gray_1" />

            <TableRow
                android:id="@+id/tr_labReportRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:paddingBottom="@dimen/table_row_padding"
                android:paddingTop="@dimen/table_row_padding"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Lab Reports Attached:"
                    android:textColor="#000000"
                    android:textSize="@dimen/table_row_textsize" />

                <TextView
                    android:id="@+id/tv_labreportsAttached"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/attached_report_text_color"
                    android:clickable="true"
                    android:text="sampleTest"
                    android:layout_weight="1" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/bt_listen_audio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Listen Audio link"
            android:background="@drawable/border_black"
            android:drawableRight="@drawable/play_green_btn"
            android:textColor="#9E9E9E"
            android:visibility="gone"
            android:paddingRight="5dp"
            />

        <Button
            android:id="@+id/btn_Accept"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/signup_button"
            android:text="Accept &amp; Answer"
            android:textColor="@color/white" />


    </LinearLayout>

</ScrollView>