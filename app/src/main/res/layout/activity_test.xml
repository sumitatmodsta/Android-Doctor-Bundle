<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pre_test_bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:titleTextColor="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="VIDEO QUALITY"
            android:drawablePadding="5dp"
            android:drawableBottom="@drawable/video"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/video_poor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/border_dot_grey"
                android:tint="@color/white"/>
            <View
                android:id="@+id/video_view1"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_toEndOf="@+id/video_poor"
                android:layout_toStartOf="@+id/video_good"
                android:layout_centerInParent="true"
                android:background="@color/thickGrey"/>
            <ImageView
                android:id="@+id/video_good"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border_dot_grey"
                android:tint="@color/white"/>
            <View
                android:id="@+id/video_view2"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_toEndOf="@+id/video_good"
                android:layout_toStartOf="@+id/video_best"
                android:layout_centerInParent="true"
                android:background="@color/thickGrey"/>
            <ImageView
                android:id="@+id/video_best"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/border_dot_grey"
                android:tint="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="POOR"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="GOOD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="BEST"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="AUDIO QUALITY"
            android:drawablePadding="5dp"
            android:drawableBottom="@drawable/audio"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/audio_poor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/border_dot_grey"
                android:tint="@color/white"/>
            <View
                android:id="@+id/audio_view1"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_toEndOf="@+id/audio_poor"
                android:layout_toStartOf="@+id/audio_good"
                android:layout_centerInParent="true"
                android:background="@color/thickGrey"/>
            <ImageView
                android:id="@+id/audio_good"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border_dot_grey"
                android:tint="@color/white"/>
            <View
                android:id="@+id/audio_view2"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_toEndOf="@+id/audio_good"
                android:layout_toStartOf="@+id/audio_best"
                android:layout_centerInParent="true"
                android:background="@color/thickGrey"/>
            <ImageView
                android:id="@+id/audio_best"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/border_dot_grey"
                android:tint="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="POOR"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="GOOD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="BEST"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>